<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/denglu_bk"
        android:gravity="center_vertical"
        android:hint="手机号"
        android:textSize="15sp"
        android:textColorHint="@color/fengexian"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/denglu_bk"
        android:hint="密码"
        android:textSize="15sp"
        android:textColorHint="@color/fengexian"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:inputType="textPassword"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp">
        <CheckBox
            android:id="@+id/check_zhanghu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_check_yuan"
            android:button="@null"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住账户密码"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/wangji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/denglu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="70dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/denglu_biankuang"/>
</LinearLayout>