<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/myicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/fengexian2" />
        <TextView
            android:id="@+id/myname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myicon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="100dp"/>
        <TextView
            android:id="@+id/mytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myicon"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/myname"
            android:textSize="12sp"
            android:text="111"
            />

        <ImageView
            android:id="@+id/shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shanchu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/huifu"
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:layout_toLeftOf="@id/shanchu"
            android:layout_centerVertical="true"
            android:src="@drawable/img_huifu"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>