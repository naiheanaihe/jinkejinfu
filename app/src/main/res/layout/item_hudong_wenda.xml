<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/xuhao"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/img_wenda_xuhao"
        android:text="01"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textColor="@color/tolbar_color"
        android:maxLines="1"
        android:layout_marginRight="10dp"
        android:ellipsize="end"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/jieshao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="@color/tolbar_color"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_marginRight="120dp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/img"
            android:gravity="center_vertical"
            android:layout_below="@id/jieshao"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/chakan_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_eye"
                android:text="0"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/pinglun_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pinglun_huati"
                android:drawablePadding="5dp"
                android:text="0"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/huida"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:background="@color/transparent"
                android:src="@drawable/img_woyaoda"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>