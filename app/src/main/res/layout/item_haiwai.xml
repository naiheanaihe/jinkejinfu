<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_icon"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="95dp"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_icon"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:layout_marginRight="95dp"/>
        <Button
            android:id="@+id/xiazai"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_shouye_xiaz"
            android:layout_centerVertical="true"
            android:text="进入下载"
            android:textColor="@color/shouye_xiaz"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/jieshao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/tolbar_color"
        android:textSize="13sp"
        android:layout_marginBottom="5dp"
        android:lineSpacingMultiplier="1.1"/>
    <ImageView
        android:id="@+id/img_bk"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相似"
        android:layout_marginLeft="10dp"
        android:textColor="@color/tolbar_color"
        android:layout_marginTop="8dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_xiangshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>