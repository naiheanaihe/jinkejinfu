<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seach"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinkejinfuapplication.shouye.SeachActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <EditText
            android:id="@+id/ed_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/search_bk"
            android:hint="荒野行动"
            android:textSize="15sp"
            android:layout_marginRight="70dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/btn_sousuo"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:textColor="@color/red"
            android:textSize="16sp"/>
    </RelativeLayout>
    <TextView
        style="@style/fengexian"
        android:layout_marginTop="7dp"/>
    <RadioGroup
        android:id="@+id/group_sousuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone">
        <RadioButton
            android:id="@+id/btn_youxi"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:button="@null"
            android:text="游戏"
            android:gravity="center"
            android:textColor="@color/sel_btn_hehuocolor"
            android:checked="true"
            android:background="@drawable/selector_xiahuaxian"/>
        <RadioButton
            android:id="@+id/btn_zixun"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:button="@null"
            android:gravity="center"
            android:text="资讯"
            android:textColor="@color/sel_btn_hehuocolor"
            android:background="@drawable/selector_xiahuaxian"
            android:layout_marginLeft="40dp"/>
        <RadioButton
            android:id="@+id/btn_shiping"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:button="@null"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/sel_btn_hehuocolor"
            android:background="@drawable/selector_xiahuaxian"
            android:layout_marginLeft="40dp"/>
    </RadioGroup>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_jieguo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_jieguo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tolbar_color"
            android:layout_marginTop="15dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/kong_jieguo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="搜索结果为空！"
        android:gravity="center"
        android:visibility="gone"/>
</LinearLayout>
