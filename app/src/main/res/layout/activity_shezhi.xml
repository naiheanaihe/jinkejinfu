<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shezhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinkejinfuapplication.mine.ShezhiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/tolbar_color"
            android:textSize="16sp"/>
    </RelativeLayout>
    <TextView
        style="@style/fengexian" />
    <LinearLayout
        android:id="@+id/lin_zhanghao"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号与安全"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tolbar_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <TextView
        style="@style/fengexian"
        android:layout_height="8dp"/>
    <LinearLayout
        android:id="@+id/lin_kefu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tolbar_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <TextView
        style="@style/fengexian"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/lin_fankui"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tolbar_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <TextView
        style="@style/fengexian" />
    <LinearLayout
        android:id="@+id/lin_shenming"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免责申明"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tolbar_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <TextView
        style="@style/fengexian" />
    <LinearLayout
        android:id="@+id/lin_guanyu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tolbar_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fengexian2">
        <Button
            android:id="@+id/tuichu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_vertical"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/denglu_biankuang"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
