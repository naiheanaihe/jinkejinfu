<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/fengexian"
        android:layout_height="5dp"
        />
    <ImageView
        android:id="@+id/img_bk"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/paihang"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/img_one"
            android:scaleType="fitXY"
            android:background="@color/huise_paihang"
            android:text=""
            android:gravity="center"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/paihang"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_icon"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="95dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_icon"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:layout_marginRight="95dp"/>
        <Button
            android:id="@+id/xiazai"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_shouye_xiaz"
            android:layout_centerVertical="true"
            android:text="进入下载"
            android:textColor="@color/shouye_xiaz" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/xuxian1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/xuxian"
            android:orientation="horizontal"
            android:layerType="software"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:id="@+id/rel_news"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/jieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/tolbar_color"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/xuxian2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/xuxian"
            android:orientation="horizontal"
            android:layerType="software"/>
        <LinearLayout
            android:id="@+id/lin_shiping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/img_bofang"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/img_bofang"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/fengexian"
        android:layout_height="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/xuxian"
        android:orientation="horizontal"
        android:layerType="software"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相似"
        android:layout_marginLeft="10dp"
        android:textColor="@color/tolbar_color"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_xiangshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>

</LinearLayout>