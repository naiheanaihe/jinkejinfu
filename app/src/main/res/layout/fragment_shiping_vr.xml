<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@color/white">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleGravity="center"
            app:expandedTitleMarginBottom="60dp"
            app:expandedTitleMarginStart="135dp"
            app:expandedTitleMarginTop="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@null">
            <com.example.jinkejinfuapplication.view.Mybanner
                android:id="@+id/inforpager"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:rollviewpager_play_delay="3000" />
        </android.support.design.widget.CollapsingToolbarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginRight="49dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioGroup
                        android:id="@+id/group_zhuji"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <RadioButton
                            android:id="@+id/btn_zhuji1"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:text="全部"
                            android:textColor="@color/group_btn_haiwai"
                            android:checked="true"
                            android:background="@drawable/selector_haiwai_btn"
                            android:button="@null"
                            android:gravity="center"/>
                        <RadioButton
                            android:id="@+id/btn_zhuji2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="虚拟现实（VR）"
                            android:textColor="@color/group_btn_haiwai"
                            android:background="@drawable/selector_haiwai_btn"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginLeft="10dp"/>
                        <RadioButton
                            android:id="@+id/btn_zhuji3"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="增强现实（AR）"
                            android:textColor="@color/group_btn_haiwai"
                            android:background="@drawable/selector_haiwai_btn"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginLeft="10dp"/>
                        <RadioButton
                            android:id="@+id/btn_zhuji4"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="混合现实（MR）"
                            android:textColor="@color/group_btn_haiwai"
                            android:background="@drawable/selector_haiwai_btn"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginLeft="10dp"/>
                        <RadioButton
                            android:id="@+id/btn_zhuji5"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="电影现实（CR）"
                            android:textColor="@color/group_btn_haiwai"
                            android:background="@drawable/selector_haiwai_btn"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginLeft="10dp"/>
                    </RadioGroup>
                </LinearLayout>
            </HorizontalScrollView>
            <ImageView
                android:id="@+id/img_moreshaix"
                android:layout_width="28dp"
                android:layout_height="13dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_bttom"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                style="@style/shuxian"
                android:background="@color/fengexian"
                android:layout_toLeftOf="@id/img_moreshaix"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_shaix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="10dp">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <RadioGroup
                    android:id="@+id/group_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/btn_type1"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:text="全部"
                        android:textColor="@color/group_btn_haiwai"
                        android:checked="true"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"/>
                    <RadioButton
                        android:id="@+id/btn_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="风景"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="美女"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type4"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="科幻"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type5"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="冒险"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type6"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="竞速"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type7"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="动作"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type8"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="体育"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type9"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="剧情"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/btn_type10"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="其他"
                        android:textColor="@color/group_btn_haiwai"
                        android:background="@drawable/selector_haiwai_btn"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"/>
                </RadioGroup>
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout
        android:id="@+id/nestlayou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_shiping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
    </cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout>

</android.support.design.widget.CoordinatorLayout>