<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrClassicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:id="@+id/prtframelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cube_ptr:ptr_resistance="1.7"
    cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
    cube_ptr:ptr_duration_to_close="300"
    cube_ptr:ptr_duration_to_close_header="2000"
    cube_ptr:ptr_keep_header_when_refresh="true"
    cube_ptr:ptr_pull_to_fresh="false"
    tools:context="com.example.jinkejinfuapplication.shouye.ShangchengActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.example.jinkejinfuapplication.view.Mybanner
                android:id="@+id/inforpager"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:rollviewpager_play_delay="3000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:src="@drawable/img_new"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日上新"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/tolbar_color"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_shangxin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/img_zhoubian_bk"
                android:text="全部商品"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:layout_marginTop="8dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</in.srain.cube.views.ptr.PtrClassicFrameLayout>
