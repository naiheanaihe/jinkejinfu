<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_findpw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinkejinfuapplication.mine.FindpwActivity">
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/denglu_bk"
        android:hint="手机号"
        android:textSize="15sp"
        android:textColorHint="@color/fengexian"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/yzm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/denglu_bk"
            android:hint="验证码"
            android:textSize="15sp"
            android:textColorHint="@color/fengexian"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_yzm"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/yanzm_bk"
            android:text="获取验证码"
            android:textSize="15sp"
            android:textColor="@color/fengexian"/>
    </LinearLayout>
    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/denglu_bk"
        android:hint="密码"
        android:textSize="15sp"
        android:textColorHint="@color/fengexian"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/pw1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/denglu_bk"
        android:hint="确认密码"
        android:textSize="15sp"
        android:textColorHint="@color/fengexian"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/zhuce"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:text="修改密码"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/denglu_biankuang"/>
</LinearLayout>
