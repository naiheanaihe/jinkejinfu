<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hudong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinkejinfuapplication.shouye.hudong.HudongActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/fengexian2">
        <EditText
            android:id="@+id/ed_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/search_bk1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/ic_search"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/ed_search"
            android:visibility="gone"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/group_hudong"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">
        <RadioButton
            android:id="@+id/btn_hudong1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="话题"
            android:textColor="@color/group_btn_hudong"
            android:background="@drawable/selector_xiahuaxian"
            android:checked="true"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/btn_hudong2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="问答"
            android:textSize="16sp"
            android:textColor="@color/group_btn_hudong"
            android:background="@drawable/selector_xiahuaxian"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/btn_hudong3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="留言"
            android:textSize="16sp"
            android:textColor="@color/group_btn_hudong"
            android:background="@drawable/selector_xiahuaxian"
            android:button="@null"
            android:gravity="center"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:visibility="visible"/>
</LinearLayout>
