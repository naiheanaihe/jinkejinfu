<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:id="@+id/activity_shiping"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinkejinfuapplication.xiangq.ShipingActivity">
    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/more_dian"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            style="@style/fengexian"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/includeview"
        android:layout_below="@id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <include
            layout="@layout/simple_player_view_player"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible" />
    </RelativeLayout>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:layout_below="@id/includeview"
        android:layout_marginBottom="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prtframelayout"
        cube_ptr:ptr_resistance="1.7"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/zixun_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="name"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/img_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_eye"
                        android:layout_marginLeft="10dp" />
                    <TextView
                        android:id="@+id/chakan_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/tolbar_color"
                        android:layout_marginLeft="8dp"/>
                    <ImageView
                        android:id="@+id/xin_dianzan"
                        android:layout_width="15dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_xin"
                        android:visibility="visible"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:id="@+id/zan_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/tolbar_color"
                        android:layout_alignBottom="@id/img_zan"
                        android:layout_marginLeft="7dp"
                        android:gravity="center"
                        android:layout_toRightOf="@id/chakan_number"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/laiyuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/chakan"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="12"
                        android:drawableLeft="@drawable/ic_eye"
                        android:gravity="right|center_vertical"/>
                    <TextView
                        android:id="@+id/zan"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="12"
                        android:drawableLeft="@drawable/ic_xin"
                        android:gravity="right"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/fenxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/img_fenxiang" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="视频简介"
                    android:textColor="@color/tolbar_color"
                    android:textSize="16sp"
                    android:background="@drawable/xiahuaxian"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/jieshao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/tolbar_color"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <LinearLayout
                    android:id="@+id/zhankai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp">
                    <TextView
                        android:id="@+id/zhankai_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="展开"/>
                    <ImageView
                        android:id="@+id/zhankai_arrow"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow_bttom"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rel_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_icon"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginRight="95dp"/>
                    <TextView
                        android:id="@+id/game_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_icon"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_below="@id/game_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="95dp"/>
                    <Button
                        android:id="@+id/xiazai"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_shouye_xiaz"
                        android:layout_centerVertical="true"
                        android:text="进入下载"
                        android:textColor="@color/shouye_xiaz"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="更多视频"
                    android:textColor="@color/tolbar_color"
                    android:textSize="16sp"
                    android:background="@drawable/xiahuaxian"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rec_shiping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="评论"
                    android:textColor="@color/tolbar_color"
                    android:textSize="16sp"
                    android:background="@drawable/xiahuaxian"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_pinglun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"/>
                <LinearLayout
                    android:id="@+id/lin_pinglun_kong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_pinglun_kong"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无评论，抢沙发"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    <TextView
        style="@style/fengexian"
        android:background="@color/fengexian"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"/>
    <LinearLayout
        android:id="@+id/lin_pinglun"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/ed_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/biankuang_ed_bk"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_pinglun"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</RelativeLayout>
