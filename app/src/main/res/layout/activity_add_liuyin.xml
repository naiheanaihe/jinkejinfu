<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_liuyin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jinkejinfuapplication.shouye.hudong.AddLiuyinActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_addliuyin_bk"
        android:paddingTop="120dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ed_liuyin"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/img_addliuyin_bk2"
            android:hint="请写您想说的话"
            android:textSize="13sp"
            android:gravity="start"
            android:padding="10dp"/>
        <ImageView
            android:id="@+id/fabiao"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:src="@drawable/img_liuyin_fabiao"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorAccent"
        />
</RelativeLayout>
