<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/mytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img"
        android:layout_marginTop="5dp"
        android:textColor="@color/tolbar_color"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBottom="@id/img"
        android:layout_toRightOf="@+id/img"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/img_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_xin"
            android:layout_below="@id/pinglun"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/zan_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_zan"
            android:layout_toRightOf="@id/img_zan"
            android:text="0"
            android:textColor="@color/tolbar_color"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/chakan_number"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_eye"
            android:text="0"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/tolbar_color"
            android:layout_alignBottom="@id/img_zan"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_toRightOf="@id/zan_number"/>
    </LinearLayout>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>