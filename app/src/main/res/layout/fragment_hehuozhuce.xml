<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择合伙人城市"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            style="@style/fengexian"
            android:background="@color/fengexian"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/lin_seltype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/chengshitype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市级别"
                android:layout_marginLeft="10dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/arrow_tuijian"
                android:layout_width="40dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow_bttom"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            style="@style/fengexian"
            android:background="@color/fengexian" />
        <LinearLayout
            android:id="@+id/lin_chengshitype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/lin_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地级城市"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/minge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余名额100"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                style="@style/fengexian" />
            <LinearLayout
                android:id="@+id/lin_type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="省会城市"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/minge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余名额100"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                style="@style/fengexian" />
            <LinearLayout
                android:id="@+id/lin_type3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直辖市"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/minge3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余名额100"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                style="@style/fengexian" />
            <LinearLayout
                android:id="@+id/lin_type4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/minge4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余名额100"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                style="@style/fengexian" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_selchengshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/name_chengshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="具体城市选择"
                android:layout_marginLeft="10dp"/>
            <TextView
                style="@style/fengexian"
                android:layout_marginTop="8dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册资料"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            style="@style/fengexian"
            android:background="@color/fengexian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/myname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:hint="姓名"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            style="@style/fengexian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/myphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:hint="联系电话"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_marginRight="10dp"
                android:inputType="number"/>
        </LinearLayout>
        <TextView
            style="@style/fengexian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件类型"
                android:layout_marginLeft="10dp" />
            <RadioGroup
                android:id="@+id/group_zhengjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">
                <RadioButton
                    android:id="@+id/rbtn_zhengjian1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/sel_hehuo_zhengjian"
                    android:button="@null"
                    android:checked="true"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp" />
                <RadioButton
                    android:id="@+id/rbtn_zhengjian2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/sel_hehuo_zhengjian"
                    android:button="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照注册号"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"/>
            </RadioGroup>
        </LinearLayout>
        <TextView
            style="@style/fengexian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/myzhengjian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:hint="证件号码"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            style="@style/fengexian" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/yzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:hint="短信验证码"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_yzm"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@drawable/yanzm_bk"
                android:text="获取验证码"
                android:textSize="15sp"
                android:textColor="@color/fengexian"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <TextView
            style="@style/fengexian" />
        <Button
            android:id="@+id/zhuce"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:text="提交注册"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/denglu_biankuang"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>


</ScrollView>