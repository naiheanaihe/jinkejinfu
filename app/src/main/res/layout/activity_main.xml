<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinkejinfuapplication.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/mine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/myname"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mine"
            android:layout_marginLeft="7dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:src="@drawable/img_jinkejinfu"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:src="@drawable/search"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/fengexian"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:visibility="visible"/>

    <RadioGroup
        android:id="@+id/rg_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_tab_top_line"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_shouye"
            style="@style/tab_main_btn"
            android:drawableTop="@drawable/tab_shouye_btn"
            android:text="首页"
            android:textSize="11sp"
            android:visibility="visible"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_haiwai"
            style="@style/tab_main_btn"
            android:drawableTop="@drawable/tab_haiwai_btn"
            android:text="海外新发现"
            android:textSize="11sp"/>

        <RadioButton
            android:id="@+id/rb_vr"
            style="@style/tab_main_btn"
            android:drawableTop="@drawable/tab_vr_btn"
            android:text="VR游戏"
            android:textSize="11sp"
            android:visibility="visible"/>
        <!-- photo
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
            -->

        <RadioButton
            android:id="@+id/rb_dujia"
            style="@style/tab_main_btn"
            android:drawableTop="@drawable/tab_dujia_btn"
            android:text="独家热门"
            android:textSize="11sp"
            android:visibility="visible"/>
        <RadioButton
            android:id="@+id/rb_shiping"
            style="@style/tab_main_btn"
            android:drawableTop="@drawable/tab_shiping_btn"
            android:text="视频"
            android:textSize="11sp"/>
    </RadioGroup>


</LinearLayout>
