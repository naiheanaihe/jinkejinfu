            android:src="@drawable/ic_xin"
            android:layout_below="@id/pinglun"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/zan_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_zan"
            android:layout_toRightOf="@id/img_zan"
            android:text="0"
            android:textColor="@color/tolbar_color"
            android:layout_marginLeft="8dp"/>-->
        <TextView
            android:id="@+id/chakan_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_eye"
            android:drawablePadding="5dp"
            android:text="0"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/tolbar_color"
            android:layout_marginLeft="10dp"
