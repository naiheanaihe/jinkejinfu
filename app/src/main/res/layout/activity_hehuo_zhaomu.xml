<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hehuo_zhaomu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinkejinfuapplication.taojinke.Hehuo_zhaomuActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="招募合伙人推广码"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/erweima"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tolbar_color"
        android:text="扫描二维码，加入淘金客招募合伙人，轻松赚收益"
        android:layout_marginTop="30dp"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/fenxiang_hehuo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:text="一键分享个人合伙人推广链接"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/denglu_biankuang"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
