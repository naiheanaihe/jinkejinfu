<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/group_dujia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <RadioButton
            android:id="@+id/btn_dujia1"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="手游"
            android:textColor="@color/group_btn_haiwai"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"/>
        <RadioButton
            android:id="@+id/btn_dujia2"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="页游"
            android:textColor="@color/group_btn_haiwai"
            android:button="@null"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"/>
        <RadioButton
            android:id="@+id/btn_dujia3"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="折扣"
            android:textColor="@color/group_btn_haiwai"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_dujia4"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="IOS免费下载"
            android:textColor="@color/fengexian"
            android:button="@null"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:clickable="false"
            android:visibility="invisible"/>
    </RadioGroup>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:background="@color/white">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleGravity="center"
                app:expandedTitleMarginBottom="60dp"
                app:expandedTitleMarginStart="135dp"
                app:expandedTitleMarginTop="0dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@null">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.example.jinkejinfuapplication.view.Mybanner
                        android:id="@+id/inforpager"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:rollviewpager_play_delay="3000" />
                    <LinearLayout
                        android:id="@+id/lin_shouyou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="精选推荐"
                            android:textColor="@color/tolbar_color"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rec_jingxuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <RadioGroup
                android:id="@+id/group_zhuji"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <RadioButton
                    android:id="@+id/btn_zhuji1"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:text="全部"
                    android:textColor="@color/group_btn_haiwai"
                    android:checked="true"
                    android:background="@drawable/selector_haiwai_btn"
                    android:button="@null"
                    android:gravity="center"/>
                <RadioButton
                    android:id="@+id/btn_zhuji2"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:text="安卓"
                    android:textColor="@color/group_btn_haiwai"
                    android:background="@drawable/selector_haiwai_btn"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:id="@+id/btn_zhuji3"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:text="IOS"
                    android:textColor="@color/group_btn_haiwai"
                    android:background="@drawable/selector_haiwai_btn"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:id="@+id/btn_zhuji4"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:text="PC"
                    android:textColor="@color/group_btn_haiwai"
                    android:background="@drawable/selector_haiwai_btn"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    style="@style/shuxian"
                    android:background="@color/fengexian"
                    android:layout_height="25dp"/>
                <ImageView
                    android:id="@+id/img_moreshaix"
                    android:layout_width="28dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arrow_bttom"
                    android:layout_marginLeft="10dp"/>
            </RadioGroup>
            <LinearLayout
                android:id="@+id/lin_shaix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <include
                        android:id="@+id/haiwaitype"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/haiwai_type"
                        />
                </HorizontalScrollView>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <!--<in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/prtframelayout"
            cube_ptr:ptr_resistance="1.7"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_duration_to_close="300"
            cube_ptr:ptr_duration_to_close_header="2000"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false" >


        </in.srain.cube.views.ptr.PtrClassicFrameLayout>-->
        <cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout
            android:id="@+id/nestlayou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_zhekou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_dujia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
            </RelativeLayout>
        </cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout>

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>