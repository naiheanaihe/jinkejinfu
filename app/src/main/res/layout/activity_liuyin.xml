<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:id="@+id/activity_liuyin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img_wangge_bk"
    tools:context="com.example.jinkejinfuapplication.shouye.hudong.LiuyinActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_addliuyin_bk"
        android:paddingTop="120dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/myicon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/img_liuyin_bk3"
                android:layout_marginLeft="35dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">
                <TextView
                    android:id="@+id/myname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="@color/classf"
                    android:maxWidth="60dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/neirong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/myname"
                    android:layout_marginLeft="7dp"
                    android:textSize="11sp"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/chakan_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_eye"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/pinglun_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_pinglun_huati"
                        android:drawablePadding="5dp"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/mytime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/ed_pinglun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rel"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:background="#FAEEBC"
                android:layout_marginRight="55dp"
                android:gravity="start"
                android:text=""
                android:textColor="@color/tolbar_color"
                android:hint="有什么想说的话..."
                android:padding="3dp"/>
            <ImageView
                android:id="@+id/pinglun"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:src="@drawable/img_liuyin_huifu"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/ed_pinglun"/>
        </RelativeLayout>
        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/prtframelayout"
            cube_ptr:ptr_resistance="1.7"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_duration_to_close="300"
            cube_ptr:ptr_duration_to_close_header="2000"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            android:layout_marginTop="10dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    </LinearLayout>
</RelativeLayout>
